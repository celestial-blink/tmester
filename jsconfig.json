{
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ES2022",
        "target": "ES2015",
        "paths": {
            "@helpers/*": ["src/helpers/*"],
            "@styles/*": ["src/styles/*"],
            "@scripts/*": ["src/scripts/*"],
            "@assets/*": ["src/assets/*"],
        }
    }
}